<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Room Management</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <link href="@Url.Content("~/css/rmsStyle.css")" rel="stylesheet" type="text/css" />

    <script>
        $(document).ready(function () {
            $(".ReserveLink").click(function () {
                sessionStorage.setItem("EventName", "");
                sessionStorage.setItem("EventID", "");
            })
        })
    </script>

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="col-md-2 col-sm-2 col-xs-12">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        
                    </div>
                </div>
                <div class="col-md-10 col-sm-10 col-xs-12">
                    <div class="navbar-collapse collapse menu">
                        <ul class="nav navbar-nav navbar-right">

                            @if (Session["usergroup"] != null)
                            {

                                <li>
                                    <a href="../USERrecord/UserPending" style="padding:0px 0px 2px 0px;">
                                        <span class="link-menu">
                                            <img src="~/images/list.png" style="height: 40px;" padding-left 13px;" />
                                            <span style="margin-top: 1px;  float: left; text-align: center;  width: 90px;  ">LIST</span>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a class="ReserveLink" href="../USERreservation/index" style="padding:0px 0px 2px 0px;">
                                        <span class="link-menu">
                                            <img src="~/images/reserve.png" style="height: 40px;" />
                                            <span style="margin-top: 1px;  float: left; text-align: center;  width: 90px; ">RESERVE</span>
                                        </span>
                                    </a>
                                </li>


                                <li>
                                    <a href="../USERrecord/History" style="padding:0px 0px 2px 0px;">
                                        <span class="link-menu">
                                            <img src="~/images/history.png" style="height: 40px;" />
                                            <span style="margin-top: 1px;  float: left; text-align: center;  width: 90px;  ">HISTORY</span>
                                        </span>
                                    </a>
                                </li>


                                <li>
                                    <a href="../" style="padding:0px 0px 2px 0px;">
                                        <span class="link-menu">
                                            <img src="~/images/logout.png" style="height: 40px;" />
                                            <span style="margin-top: 1px;  float: left; text-align: center;  width: 80px; ">LOGOUT</span>
                                        </span>
                                    </a>
                                </li>

                            }

                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div>

            </div><!-- /.row -->
        </div>

    </nav>


    <div class="container">

        @RenderBody()
    </div>
    @RenderSection("autocomplete", false)
    @RenderSection("scripts", false)
    @RenderSection("datepicker", false)

</body>
</html>
                <div class="col-md-3">
                    <div class="event">Event1</div>
                </div>
                <div class="col-md-3">
                    <div class="event">Event2</div>
                </div>
                <div class="col-md-3">
                    <div class="event">Event3</div>
                </div>
                <div class="col-md-3">
                    <div class="event">Event4</div>
                </div>
            </div>*@
    </div>
</body>